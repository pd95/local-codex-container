# For pure JS environment
FROM alpine:latest

WORKDIR /workdir

RUN apk add bash npm file curl git ripgrep jq
RUN npm i -g @openai/codex 

COPY config.toml /root/.codex/

# Configure git
RUN git config --global user.email "codex@localhost" && \
    git config --global user.name "Codex CLI" && \
    git config --global init.defaultBranch "main"

CMD codex --dangerously-bypass-approvals-and-sandbox --profile gpt-oss
